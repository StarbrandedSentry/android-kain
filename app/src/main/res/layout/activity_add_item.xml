<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItemActivity">

    <Button
        android:id="@+id/a_addItem_choose_btn"
        style="@style/FilledFlat"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_btn"
        android:onClick="chooseImage"
        android:padding="@dimen/materialPadding"
        android:paddingStart="@dimen/materialPadding"
        android:paddingEnd="@dimen/materialPadding"
        android:text="choose"
        android:textSize="@dimen/defFont"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/a_addItem_image"
        app:layout_constraintTop_toBottomOf="@+id/a_addItem_price"
        app:layout_constraintVertical_bias="0.242" />

    <Button
        android:id="@+id/a_addItem_add_btn"
        style="@style/FilledFlat"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/round_btn"
        android:onClick="uploadImage"
        android:padding="@dimen/materialPadding"
        android:paddingStart="@dimen/materialPadding"
        android:paddingEnd="@dimen/materialPadding"
        android:text="add item"
        android:textSize="@dimen/defFont"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a_addItem_pb" />

    <EditText
        android:id="@+id/a_addItem_name"
        android:layout_width="@dimen/textWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="food name "
        android:inputType="textPersonName"
        android:textSize="@dimen/defFont"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />

    <EditText
        android:id="@+id/a_addItem_price"
        android:layout_width="@dimen/textWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="food price in pesos"
        android:inputType="number"
        android:textSize="@dimen/defFont"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a_addItem_name"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/a_addItem_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a_addItem_price"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/empty_image" />

    <ProgressBar
        android:id="@+id/a_addItem_pb"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a_addItem_image"
        app:layout_constraintVertical_bias="0.169" />

</android.support.constraint.ConstraintLayout>