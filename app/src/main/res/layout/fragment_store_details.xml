<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/f_store_detail_name_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/defStartPadding"
            android:text="Name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/defFont"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/f_store_detail_date_started_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/defStartPadding"
            android:text="Date Started"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/defFont"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/f_store_detail_name"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/f_store_detail_location_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/defStartPadding"
            android:text="Location"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/defFont"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/f_store_detail_date_started"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/f_store_detail_contact_number_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/defStartPadding"
            android:text="Contact Number"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/defFont"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/f_store_detail_location"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/f_store_detail_operating_hours_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/defStartPadding"
            android:text="Operating Hours"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/defFont"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/f_store_detail_contact_number"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/f_store_detail_rating_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/defStartPadding"
            android:text="Rating"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/defFont"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_store_detail_operating_hours"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/f_store_detail_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/defStartPadding"
            android:text="Name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/defFont"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/f_store_detail_name_title"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/f_store_detail_date_started"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/defStartPadding"
            android:text="Date Started"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/defFont"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_store_detail_date_started_title"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/f_store_detail_location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/defStartPadding"
            android:text="Date Started"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/defFont"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_store_detail_location_title"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Location" />

        <TextView
            android:id="@+id/f_store_detail_contact_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/defStartPadding"
            android:text="Contact Number"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/defFont"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_store_detail_contact_number_title"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/f_store_detail_operating_hours"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/defStartPadding"
            android:text="Operating Hours"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/defFont"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_store_detail_operating_hours_title"
            app:layout_constraintVertical_bias="0.0" />

        <RatingBar
            android:id="@+id/f_store_detail_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:stepSize="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.129"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_store_detail_rating_title"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/f_store_detail_submit_rating"
            style="@style/FilledFlat"
            android:layout_width="@dimen/smallButtonWidth"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/round_btn"
            android:text="rate!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.088"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_store_detail_rating"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>