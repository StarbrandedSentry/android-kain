<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_btn">

        <ImageView
            android:id="@+id/avail_menu_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/empty_image" />

        <TextView
            android:id="@+id/avail_menu_name"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="@dimen/materialPadding"
            android:layout_toEndOf="@+id/avail_menu_image"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/medFont"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/avail_menu_price_title"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avail_menu_name"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/materialPadding"
            android:layout_toEndOf="@+id/avail_menu_image"
            android:gravity="center_vertical"
            android:text="P"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/defFont" />

        <TextView
            android:id="@+id/avail_menu_price"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avail_menu_name"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/materialPadding"
            android:layout_toEndOf="@+id/avail_menu_price_title"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/defFont" />


    </RelativeLayout>

</android.support.v7.widget.CardView>