<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/avail_menu_image"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_margin="@dimen/materialPadding"
            app:srcCompat="@drawable/empty_image" />

        <TextView
            android:id="@+id/avail_menu_name"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avail_menu_image"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/defFont"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/materialPadding"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>