<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/active_store_layout"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp">

        <TextView
            android:id="@+id/active_store_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingStart="@dimen/defStartPadding"
            android:text="id"
            android:textSize="@dimen/defFont"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/active_store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/active_store_id"
            android:layout_marginTop="1dp"
            android:gravity="left"
            android:paddingStart="@dimen/defStartPadding"
            android:textColor="@color/colorBlack"
            android:text="name"
            android:textSize="@dimen/defFont" />

        <TextView
            android:id="@+id/active_store_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/active_store_name"
            android:layout_marginTop="1dp"
            android:gravity="left"
            android:textColor="@color/colorBlack"
            android:paddingStart="@dimen/defStartPadding"
            android:text="location"
            android:textSize="@dimen/defFont" />
    </RelativeLayout>
</android.support.v7.widget.CardView>