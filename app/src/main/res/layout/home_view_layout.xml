<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_btn"
        android:layout_margin="6dp">


        <ImageView
            android:id="@+id/hv_banner_view"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="@dimen/materialPadding"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/hv_name_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:layout_below="@+id/hv_banner_view"
            android:layout_marginTop="0dp"
            android:textSize="@dimen/defFont"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/defStartPadding"
            android:text="TextView"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hv_location_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textHeight"
            android:layout_below="@+id/hv_name_text"
            android:layout_marginTop="0dp"
            android:textSize="@dimen/defFont"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/defStartPadding"
            android:text="TextView"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>
</android.support.v7.widget.CardView>